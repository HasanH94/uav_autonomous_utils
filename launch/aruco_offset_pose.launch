<launch>

    <arg name="markerId"        default="1"/>
    <arg name="markerSize"      default="0.6"/>    <!-- in m -->
    <arg name="zOffset"         default="1.2"/>    <!-- Offset along marker's local Z-axis in meters -->
    <arg name="yOffset"         default="0.0"/>    <!-- Offset along marker's local Y-axis in meters -->
    <arg name="xOffset"         default="0.0"/>    <!-- Offset along marker's local X-axis in meters -->
    <arg name="targetFrame"     default="odom"/>   <!-- Frame to publish the final pose in -->
    <arg name="enableViz"       default="true"/>   <!-- Enable/disable visualization window -->

    <node pkg="uav_autonomous_utils" type="aruco_pose_offset_publisher.py" name="aruco_pose_offset_publisher" output="screen">
        <param name="marker_id"            value="$(arg markerId)"/>
        <param name="marker_size"          value="$(arg markerSize)"/>
        <param name="z_offset"             value="$(arg zOffset)"/>
        <param name="y_offset"             value="$(arg yOffset)"/>
        <param name="x_offset"             value="$(arg xOffset)"/>
        <param name="target_frame"         value="$(arg targetFrame)"/>
        <param name="enable_visualization" value="$(arg enableViz)"/>
        
        <!-- Remap camera topics if they are different from the defaults in the Python node -->
        <!-- <param name="camera_rgb_topic" value="/your/custom/rgb/image_raw"/> -->
        <!-- <param name="camera_info_topic" value="/your/custom/rgb/camera_info"/> -->
        
        <!-- Output topic for the offset pose -->
        <param name="output_goal_topic"    value="/move_base_visual"/>
        <param name="camera_info_topic"    value="/iris/camera/rgb/camera_info"/>
    </node>

    <!-- <node pkg="uav_autonomous_utils" type="camera_info_publisher.py" name="camera_info_publisher" output="screen"/> -->

</launch>